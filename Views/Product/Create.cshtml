@model PH_Management.Models.Product





<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Add New Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">add Products</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-3"></div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">product Info</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal">
                        <div class="box-body">

                            <div class="form-group">
                                <label class="col-sm-2 control-label">ProductName</label>

                                <div class="col-sm-10">
                                    @*@Html.TextBox("UnitPrice", null, new { @class = "form-control" })*@
                                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProductName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">ManufactureName</label>

                                <div class="col-sm-10">
                                    @*@Html.DropDownList("Category", null, "--Select--", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.category_id)*@
                                    @Html.TextBoxFor(model => model.ManufacturerName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ManufacturerName)
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="col-sm-2 control-label">Frequency</label>

                                <div class="col-sm-10">
                                    @*@Html.TextBox("UnitPrice", null, new { @class = "form-control" })*@
                                    @Html.TextBoxFor(model => model.Frequency, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Frequency)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">ProductType</label>

                                <div class="col-sm-10">
                                    @Html.DropDownList("Category", null, "--Select--", new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.ProductTypeCode)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Rack</label>

                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.RackID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RackID)
                                </div>
                            </div>





                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" onclick="AddProduct()" class="btn btn-info pull-right">Upload Product</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>



<script type="text/javascript">
        function AddProduct() {
            debugger;
            var productname = $("#ProductName").val();
            var manufacturerName = $("#ManufacturerName").val();
            var frequency = $("#Frequency").val();
            var producttypecode = $("#Category").val();
            var rackid = $("#RackID").val();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '@Url.Action("Create", "Product")',
                data: { "ProductName": productname, "ManufacturerName": manufacturerName, "Frequency": frequency, "ProductTypeCode": producttypecode, "RackID": rackid },
                success: function (result) {
                    alert(result);
                },
                error: function (xhr, ajaxOptions, error) {
                    // alert(xhr.status);
                    //alert(xhr.responseText);
                    //alert(error);
                }
            });
        }
</script>