@model PH_Management.Models.PurchaseItem


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Add New Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">add Products</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-3"></div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">product Info</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal">
                        <div class="box-body">

                            <div class="form-group">
                                <label class="col-sm-2 control-label">ProductCode</label>

                                <div class="col-sm-10">
                                    @*@Html.TextBox("UnitPrice", null, new { @class = "form-control" })*@
                                    @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProductCode)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Quantity</label>

                                <div class="col-sm-10">
                                    @*@Html.DropDownList("Category", null, "--Select--", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.category_id)*@
                                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Quantity)
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="col-sm-2 control-label">UnitPrice</label>

                                <div class="col-sm-10">
                                    @*@Html.TextBox("UnitPrice", null, new { @class = "form-control" })*@
                                    @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UnitPrice)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">ClientPrice</label>

                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.ClientPrice, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ClientPrice)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Remarks</label>

                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Remarks)
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-2 control-label">InsertedDate</label>

                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.InsertDate, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.InsertDate)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">InsertedBy</label>

                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.InsertedBy, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.InsertedBy)
                                </div>
                            </div>


                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" onclick="AddPurchase()" class="btn btn-info pull-right">Upload Product</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


<script type="text/javascript">
        function AddPurchase() {
            debugger;
            var productcode = $("#ProductCode").val();
            var quantity = $("#Quantity").val();
            var unitprice = $("#UnitPrice").val();
            var clientprice = $("#ClientPrice").val();
            var insertdate = $("#InsertDate").val();
            var insertedby = $("#InsertedBy").val();
            var remarks = $("#InsertedBy").val();


            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '@Url.Action("Create", "PurchaseItem")',
                data: { "ProductCode": productcode, "Quantity": quantity, "UnitPrice": unitprice, "ClientPrice": clientprice, "InsertDate": insertdate, "InsertedBy": insertedby, "Remarks": remarks },
                success: function (result) {
                    alert(result);
                },
                error: function (xhr, ajaxOptions, error) {
                    // alert(xhr.status);
                    //alert(xhr.responseText);
                    //alert(error);
                }
            });
        }


    $(function () {
        $("#InsertDate").datepicker();
    });
</script>